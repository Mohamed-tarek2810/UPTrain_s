@model UPTrain.Models.Courses
@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Course
                    </h2>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h4><i class="fas fa-warning"></i> Are you sure you want to delete this course?</h4>
                        <p class="mb-0">This action cannot be undone. All associated data will be permanently removed.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="Course Image"
                                     class="img-fluid rounded mb-3"
                                     style="max-height: 200px; object-fit: cover;"
                                     onerror="this.style.display='none';" />
                            }
                            else
                            {
                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center mb-3"
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-white"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Title:</dt>
                                <dd class="col-sm-8">@Model.Title</dd>

                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.Category</span>
                                </dd>

                                <dt class="col-sm-4">Creator:</dt>
                                <dd class="col-sm-8">@(Model.CreatedBy?.UserName ?? "Unknown")</dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <div class="text-muted">@Model.Description</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr />

                    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CourseId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you absolutely sure you want to delete this course? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Delete Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>