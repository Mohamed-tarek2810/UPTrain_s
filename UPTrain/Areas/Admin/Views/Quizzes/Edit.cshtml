@model Quiz
@{
    ViewData["Title"] = "Edit Quiz";
}

<h2>Edit Quiz</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="QuizId" />
    <input type="hidden" asp-for="CourseId" />

    <div class="mb-3">
        <label class="form-label">Course</label>
        <input class="form-control" value="@Model.Course?.Title" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" type="text" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>
