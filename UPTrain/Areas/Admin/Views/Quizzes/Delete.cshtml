@model UPTrain.Models.Quiz
@{
    ViewData["Title"] = "Delete Quiz";
}

<h2 class="text-danger">Delete Quiz</h2>

<p>Are you sure you want to delete this quiz?</p>

<dl class="row">
    <dt class="col-sm-2">Quiz Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course?.Title</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="QuizId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>
