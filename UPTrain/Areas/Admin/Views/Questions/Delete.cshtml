@model UPTrain.Models.Question
@{
    ViewData["Title"] = "Delete Question";
}

<h2 class="text-danger">Delete Question</h2>

<p>Are you sure you want to delete this question?</p>

<dl class="row">
    <dt class="col-sm-2">Question</dt>
    <dd class="col-sm-10">@Model.QuestionText</dd>

    <dt class="col-sm-2">Option A</dt>
    <dd class="col-sm-10">@Model.OptionA</dd>

    <dt class="col-sm-2">Option B</dt>
    <dd class="col-sm-10">@Model.OptionB</dd>

    <dt class="col-sm-2">Option C</dt>
    <dd class="col-sm-10">@Model.OptionC</dd>

    <dt class="col-sm-2">Option D</dt>
    <dd class="col-sm-10">@Model.OptionD</dd>

    <dt class="col-sm-2">Correct Answer</dt>
    <dd class="col-sm-10">@Model.CorrectAnswer</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="QuestionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Cancel</a>
</form>
