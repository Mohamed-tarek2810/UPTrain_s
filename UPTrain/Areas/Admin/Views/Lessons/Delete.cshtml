@model UPTrain.Models.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}

<h2>Delete Lesson</h2>

<h4>Are you sure you want to delete this lesson?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Video URL</dt>
    <dd class="col-sm-10">@Model.VideoUrl</dd>

    <dt class="col-sm-2">Content</dt>
    <dd class="col-sm-10">@Model.Content</dd>

    <dt class="col-sm-2">Order</dt>
    <dd class="col-sm-10">@Model.OrderIndex</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LessonId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>
